{% extends 'base.html.twig' %}

{% block title %}Nos Trottinettes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/products.css') }}">
    {# <link rel="stylesheet" href="{{ asset('assets/css/slide-product.css') }}"> #}
{% endblock %}

{% block content %}
<section class="section-trott-list" id="trott-list">
    <div class="title">
        <h1>Nos Trottinettes</h1>
        <p>Découvrez notre sélection de trottinettes.</p>
    </div>

    <div class="container-trott-list trott-list-center">
        {% for item in trottinettes %}
            <div class="trott-list-box" data-aos="fade" data-aos-duration="2000">
                <a href="{{ path('trottinette_show', { 'slug': item.slug }) }}">
                    <img src="/uploads/{{ item.image }}" alt="{{ item.name }}" />
                </a>
                <p>{{ item.name }}</p>
            </div>
        {% endfor %}
    </div>

    <div class="pagination">
        {{ knp_pagination_render(trottinettes) }}
    </div>
</section>
{% endblock %}
